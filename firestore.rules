rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    /**
     * Users Collection Rules:
     * - Allow read/write only if the user is authenticated.
     * - The authenticated user's UID must match the document ID.
     * This ensures each user can only manage their own data.
     */
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    /**
     * Global Default Rule:
     * Deny all other reads and writes to any other collections
     * not explicitly defined above.
     */
    match /{document=**} {
      allow read, write: if false;
    }
  }
}